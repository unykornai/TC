{
  "name": "optkas-platform",
  "version": "1.0.0",
  "description": "OPTKAS Sovereign Multi-Ledger Financial Operating System",
  "private": true,
  "workspaces": [
    "packages/*",
    "scripts",
    "apps/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "validate": "ts-node scripts/validate-config.ts --config config/platform-config.yaml",
    "init:testnet": "ts-node scripts/init-platform.ts --network testnet --dry-run",
    "reconcile": "ts-node scripts/reconcile-ledgers.ts --network testnet",
    "audit": "ts-node scripts/generate-audit-report.ts --type full --network testnet",
    "lint": "eslint 'packages/**/*.ts' 'scripts/**/*.ts'",
    "test": "jest"
  },
  "dependencies": {
    "@stellar/stellar-sdk": "^11.3.0",
    "commander": "^12.0.0",
    "qrcode": "^1.5.4",
    "tweetnacl": "^1.0.3",
    "uuid": "^9.0.0",
    "winston": "^3.11.0",
    "xrpl": "^3.1.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.32",
    "@types/qrcode": "^1.5.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
